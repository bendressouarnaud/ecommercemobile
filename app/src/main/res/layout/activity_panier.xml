<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanierActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/Theme.Market.AppBarOverlay"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:elevation="0dp"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarpanier"
            android:layout_width = "match_parent"
            android:layout_height = "?attr/actionBarSize"
            android:background="@drawable/backgroundrawable"
            app:popupTheme="@style/Theme.Market.PopupOverlay"
            app:navigationIcon="@drawable/ic_back"
            app:title="Panier"
            app:titleTextColor="#000000"
            />

  </com.google.android.material.appbar.AppBarLayout>

  <include
      android:id="@+id/layoutpanier"
      layout="@layout/content_panier"/>

  </androidx.coordinatorlayout.widget.CoordinatorLayout>